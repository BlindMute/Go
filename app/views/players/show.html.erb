<div id="wrapper">
	<div id="side-header-container">
		<span id="plug-header"><%= @player.name.downcase %></span>
	</div>
	<div id="game-history-container">
		<% if @player.games.any? %>

			<% @player.games.each do |g| %>
				<li><%= link_to "#{g.players.first.display_name} vs. #{g.players.last.display_name}", g %>
			<% end -%>
		<% else %>
			<li>No games :(</li>
		<% end %>
	</div>
</div>