<% invs = @player.involvements %>
<% games = invs.joins(:game).where(games: {completed: true}) #.or in progress true %>


<%= react_component 'Profile', {
	playerName: @player.display_name.downcase,
	games:      games.as_json(
		include: {
			game: {
				only:    [:webid, :history, :created_at, :result, :in_progress, :completed],
				include: {
					players: {
						only: [:display_name]
					}
				}
			},

		},
		only:    [:winner, :draw, :score]
	)

} %>