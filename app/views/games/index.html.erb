<%= react_component 'Lobby', {
	game_data:   {
		games:  @games,
		me:     @current_user,
		games_in_progress: @current_user.games.where(in_progress: true).any?,
		remote: true
	},
	button_data: [{
					  text:     'Create Game',
					  selected: false
				  }, {
					  text:     'Play with Friend',
					  selected: false,
					  disabled: true
				  }, {
					  text:     'Play against Computer',
					  selected: false,
					  disabled: true
				  }
				 ],
	show_modal:  params[:modal] ? params[:modal].to_i : nil,
	auth:        form_authenticity_token
} %>