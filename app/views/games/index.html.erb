<%= react_component 'Lobby', {
	game_data:   {
		games:  @games,
		me:     @current_user,
		games_in_progress: @current_user.games.where(in_progress: true).any?,
		remote: true
	},
	button_data: [{
					  text:     'Create Game',
					  selected: false
				  }, {
					  text:     'Play with Friend',
					  selected: false,
					  disabled: false
				  }, {
					  text:     'Play against Computer',
					  selected: false,
					  disabled: true
				  }
				 ],
	modal:       params[:modal] ? params[:modal].to_i : -1, #modal type (integer)
	modals:      {
		none:     -1,
		create:   0,
		private:  1,
		computer: 2
	},
	auth:        form_authenticity_token
}, {prerender: true} %>