<nav>
	<div class=navTopItem>
		Home
		<%= link_to root_path do %>
			<span></span>
		<% end %>
	</div>
	<div class=navTopItem>
		New Game
		<% if current_page?(root_path) %>
			<%= link_to new_game_path, id: 'newGame', remote: true do %>
				<span></span>
			<% end %>
		<% else %>
			<%= link_to new_game_path, id: 'newGame' do %>
				<span></span>
			<% end %>
		<% end %>
	</div>
	<% if @current_user.anonymous %>
		<div class='navTopItem navRight'>
			Signup
			<%= link_to signup_path do %>
				<span></span>
			<% end %>
		</div>
		<div class='navTopItem navRight'>
			Login
			<%= link_to login_path do %>
				<span></span>
			<% end %>
		</div>
	<% else %>
		<div class="navTopItem navRight">
			<%= @current_user.display_name %>
			<%= link_to current_user do %>
				<span></span>
			<% end %>
			<div class='navSubItems'>
				<%= link_to 'Edit profile', settings_path %>
				<%= link_to 'Logout', logout_path, method: 'delete' %>
			</div>
		</div>
